                div.digit 01
                div.month окт
              .separator
              .date-block.date-block-offer
                div.from по
                div.digit 25
                div.month окт
            // end dates
            h3.title-top(data-aos="fade-up" data-aos-anchor=".offer-item-promo" data-aos-duration="500" data-aos-delay="300") SEZAR GROUP ОБЪЯВЛЯЕТ ТВОРЧЕСКИЙ КОНКУРс
            h1.title.section-heading(data-aos="fade-up" data-aos-anchor=".offer-item-promo" data-aos-duration="500" data-aos-delay="400") 2 МИЛЛИОНА В ПОДАРОК
        a.circle-link.popup-link(href="#popup-subscribe")
          include data/envelope.svg
      // end news-article-top
      // start offer-results
      section.offer-results
        .container
          h2.section-heading(data-aos="fade-down" data-aos-anchor=".offer-results") Призовой фонд
          .offer-results-item(data-aos="fade-in" data-aos-duration="200" data-aos-delay="0")
            .num(data-aos="zoom-out" data-aos-anchor=".offer-results" data-aos-delay="400") 2
            .text(data-aos="zoom-out" data-aos-anchor=".offer-results" data-aos-delay="500") место
            .caption(data-aos="fade-up" data-aos-anchor=".offer-results" data-aos-delay="400") машино-место
          .offer-results-item(data-aos="fade-in" data-aos-duration="200" data-aos-delay="200")
            .num(data-aos="zoom-out" data-aos-anchor=".offer-results" data-aos-delay="700") 1
            .text(data-aos="zoom-out" data-aos-anchor=".offer-results" data-aos-delay="800") место
            .caption(data-aos="fade-up" data-aos-anchor=".offer-results" data-aos-delay="900") автомобиль
