  .offers-page
    section.offers
      // start news-article-top
      .offer-item-promo(style="background-image: url(../images/offer1.jpg)")
        .container
          .inner(data-aos="fade-in" data-aos-duration="1000" data-aos-delay="200" data-aos-anchor=".news-item-promo")
